<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.driver.bean.TrainingRecord" table="trainingRecord">
        <id name="tr_id" type="string" column="tr_id">
            <generator class="assigned"/>
        </id>
        <property name="t_id" type="string" column="t_id"/>
        <property name="c_id" type="string" column="c_id" />
        <property name="dc_id" type="string" column="dc_id"/>
        <property name="tr_duration" type="string" column="tr_duration" />
        <property name="tr_date" type="string" column="tr_date"/>
    </class>

</hibernate-mapping>
