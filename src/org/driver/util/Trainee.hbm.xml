<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.driver.bean.Trainee" table="trainee">
        <id name="t_id" type="string" column="t_id">
            <generator class="assigned"/>
        </id>
        <property name="t_name" type="string" column="t_name"/>
        <property name="t_sex" type="string" column="t_sex" />
        <property name="t_tel" type="string" column="t_tel"/>
        <property name="t_idcard" type="string" column="t_idcard"/>
        <property name="t_icon" type="string" column="t_icon" />
        <property name="t_signTime" type="string" column="t_signTime"/>
        <property name="t_schooling" type="string" column="t_schooling" />
        <property name="t_trainStatus" type="string" column="t_trainStatus"/>
    </class>

</hibernate-mapping>
