<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.driver.bean.DriverCar" table="drivercar">
        <id name="dc_id" type="string" column="dc_id">
            <generator class="assigned"/>
        </id>
        <property name="dc_carNumber" type="string" column="dc_carNumber"/>
        <property name="dc_type" type="string" column="dc_type" />
        <property name="dc_age" type="string" column="dc_age"/>
    </class>

</hibernate-mapping>
